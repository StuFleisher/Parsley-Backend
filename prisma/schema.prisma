generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ingredients {
  ingredient_id Int     @id @default(autoincrement())
  step          Int
  amount        String? @db.VarChar(25)
  description   String  @db.VarChar(25)
  steps         steps   @relation(fields: [step], references: [step_id], onDelete: Cascade, onUpdate: NoAction)
}

model recipes {
  recipe_id   Int     @id @default(autoincrement())
  name        String  @db.VarChar(30)
  description String? @db.VarChar(40)
  source_url  String?
  source_name String? @db.VarChar(25)
  steps       steps[]
}

model steps {
  step_id      Int           @id @default(autoincrement())
  recipe_id    Int
  step_number  Int
  instructions String        @db.VarChar(100)
  ingredients  ingredients[]
  recipes      recipes       @relation(fields: [recipe_id], references: [recipe_id], onDelete: Cascade, onUpdate: NoAction)
}
