{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://parsley.stufleisher.com/recipeNew.schema.json",
    "type": "object",
    "properties": {
      "name": {
        "type": "string",
        "minLength": 1,
        "maxLength": 30
      },
      "description": {
        "type": "string",
        "minLength": 1,
        "maxLength": 100
      },
      "sourceUrl": {
        "type": "string",
        "format":"uri"
      },
      "sourceName": {
        "type": "string",
        "minLength": 1,
        "maxLength": 30
      },
      "steps": {
        "type": "array",
        "items": {
          "type":"object",
          "properties":{
            "stepNumber":{
                "type":"integer"
            },
            "instructions":{
                "type":"string"
            },
            "ingredients":{
                "type":"array",
                "items":{
                  "type":"object",
                  "properties":{
                      "amount":{
                          "type": "string"
                      },
                      "description":{
                          "type":"string"
                      },
                      "instructionRef":{
                        "type":"string"
                      }
                    }
                  },
                  "additionalProperties": false,
                  "required":["amount","description","instructionRef"]
                }
            }
          },
        "additionalProperties": false,
        "required": ["stepNumber","instructions","ingredients"]
        }
      },
    "additionalProperties": false,
    "required": [
      "name",
      "description",
      "sourceName",
      "steps"
    ]
  }