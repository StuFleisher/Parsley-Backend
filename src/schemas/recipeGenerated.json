{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://parsley.stufleisher.com/recipeGenerated.schema.json",
    "type": "object",
    "properties": {
      "name": {
        "type": "string"
      },
      "owner":{"type":"string"},
      "description":{"type":"string"},
      "sourceName":{"type":"string"},
      "steps": {
        "type": "array",
        "items": {
          "type":"object",
          "properties":{
            "stepNumber":{
                "type":"integer"
            },
            "instructions":{
                "type":"string"
            },
            "ingredients":{
                "type":"array",
                "items":{
                  "type":"object",
                  "properties":{
                      "amount":{
                          "type": "string"
                      },
                      "description":{
                          "type":"string"
                      },
                      "instructionRef":{
                        "type":"string"
                      }
                    },
                    "additionalProperties": false,
                    "required":["amount","description","instructionRef"]
                  }
                }
            },
            "additionalProperties": false,
            "required": ["stepNumber", "ingredients", "instructions"]
          }
        },
        "tags": {
            "type": "array",
            "items": {
              "type":"object",
              "properties":{
                "name":{"type":"string"}
              },
              "additionalProperties": false,
              "required":["name"]
            }
        }
      },
    "additionalProperties": false,
    "required": [
      "name",
      "owner",
      "description",
      "sourceName",
      "steps",
      "tags"
    ]
  }