{
  "compilerOptions": {
    "outDir": "./dist/",
    "rootDir": "./src",
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "ESNext",
    "allowJs": true,
    // "moduleResolution": "bundler",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "paths": {
      "baseUrl":["./src/"],
      "app.js":["./app.ts"],
      "prismaClient.js":["./prismaClient.ts"],
      "prismaSingleton.js":["./prismaSingleton.ts"],
      "/api/*": ["./api/*"],
      "/middleware/*": ["./middleware/*"],
      "/models/*": ["./models/*"],
      "/routes/*": ["./routes/*"],
      "/schemas/*": ["./schemas/*"],
      "/test/*": ["./test/*"],
      "/utils/*": ["./utils/*"],
    }
  },
  "ts-node": {
    "esm": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
}
